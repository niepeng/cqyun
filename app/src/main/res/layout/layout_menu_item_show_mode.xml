<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/menu_show_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/list_mode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/list_mode"
            android:onClick="onListModeClick"
            android:textColor="@drawable/drawerlayout_menu_text_color"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/grid_mode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/grid_mode"
            android:onClick="onGridModeClick"
            android:textColor="@drawable/drawerlayout_menu_text_color"/>
    </RadioGroup>

</RelativeLayout>